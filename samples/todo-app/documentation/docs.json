{
  "title": "TodoApp",
  "description": "Sample documentation of todo list application.",
  "version": "0.0.1",
  "useCases": [
    {
      "id": "todo--happy",
      "participants": [
        { "id": "user" },
        { "id": "frontend" },
        { "id": "backend" }
      ],
      "steps": [
        {
          "id": "visit-todos-view",
          "type": "message",
          "from": { "id": "user" },
          "to": { "id": "frontend" },
          "arrow": "->>",
          "message": null
        },
        {
          "id": "display-todos-view",
          "type": "message",
          "from": { "id": "frontend" },
          "to": { "id": "user" },
          "arrow": "-->>",
          "message": null
        },
        {
          "id": "get-all-todos",
          "type": "request",
          "from": { "id": "frontend" },
          "to": { "id": "backend" },
          "arrow": "->>",
          "request": { "method": "get", "url": "/todos", "body": null }
        },
        {
          "id": "return-all-todos--empty",
          "type": "response",
          "from": { "id": "backend" },
          "to": { "id": "frontend" },
          "arrow": "-->>",
          "response": { "status": 200, "body": [] }
        },
        {
          "id": "display-todos-list",
          "type": "message",
          "from": { "id": "frontend" },
          "to": { "id": "user" },
          "arrow": "-->>",
          "message": null
        },
        {
          "id": "add-todo--first",
          "type": "message",
          "from": { "id": "user" },
          "to": { "id": "fronte,nd" },
          "arrow": "->>",
          "message": {
            "name": "Walk the dog"
          }
        },
        {
          "id": "post-todo--first",
          "type": "request",
          "from": { "id": "frontend" },
          "to": { "id": "backend" },
          "arrow": "->>",
          "request": {
            "method": "post",
            "url": "/todo",
            "body": { "name": "Walk the dog" },
            "headers": { "Authorization": "Bearer xyz-123" }
          }
        },
        {
          "id": "return-created-todo--first",
          "type": "response",
          "from": { "id": "backend" },
          "to": { "id": "frontend" },
          "arrow": "-->>",
          "response": {
            "status": 200,
            "body": [{ "name": "Walk the dog", "done": false }]
          }
        },
        {
          "id": "display-created-todo--first",
          "type": "message",
          "from": { "id": "frontend" },
          "to": { "id": "user" },
          "arrow": "-->>"
        }
      ]
    }
  ]
}
